<!DOCTYPE html>
<html>
<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  
  <style>
  </style>
</head>
<body>
  <div id="nav-placeholder">
  </div>
  
  <div class="row justify-content-md-center">
	  <div class="col-md-auto">
	  	  <h2>Create a new POD</h2>
		  <form action="/createsession" method="post">
		    <div class="form-group">
		      <input class="form-control" type="text" name="sessionNameInput" id="sessionNameInput" placeholder="Session name">
		    </div>
		    <div class="form-group">
		      <select class="form-control" name="gameTypeSelect" id="gametypeSelect">
		        <option>HideAndSeek</option>
		      </select>
		    </div>
		    <div class="form-group">
		      <div class="form-row">
		      	  <div class="form-group col-md-4">
			        <div class="form-check">
			          <input type="checkbox" class="form-check-input" name="privateCheck" id="privateCheck">
			          <label class="form-check-label" for="gridCheck">Private session?</label>
			        </div>
			      </div>
			      <div class="form-group col-md-8">
			        <input class="form-control" type="text" name="sessionPassword" id="sessionPassword" placeholder="Session password" disabled>
			      </div>
		      </div>
		    </div>
		    <button type="submit" class="btn btn-primary">Create</button>
		  </form>
	  </div>
  </div>

  <script>
    jQuery(document).ready(function($) {
      $("#nav-placeholder").load("nav.ejs", function() {
        $(".nav").find(".active").removeClass("active");
        $("#createlink").addClass("active");
      });
    });
    
    $('#privateCheck').change(function() {
      $('#sessionPassword').prop('disabled',!$('#sessionPassword').prop('disabled'));	
    });
    
  </script> 


<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>