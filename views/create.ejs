<body>
  <div id="nav-placeholder">
  </div>
  
  <div class="row justify-content-md-center">
	  <div class="col-md-auto">
	  	  <h2>Create a new POD</h2>
		  <form>
		    <div class="form-group">
		      <input class="form-control" id="sessionNameInput" placeholder="Session name">
		    </div>
		    <div class="form-group">
		      <select class="form-control" id="gametypeSelect">
		        <option>Hide and Seek</option>
		      </select>
		    </div>
		    <div class="form-group">
		      <div class="form-check">
		        <input type="checkbox" class="form-check-input" id="privateCheck">
		      </div>
		      <input class="form-control" id="sessionPassword" placeholder"Session password">
		    </div>
		    <button type="submit" class="btn btn-primary">Create</button>
		  </form>
	  </div>
  </div>

  <script>
    jQuery(document).ready(function($) {
      $("#nav-placeholder").load("nav.ejs", function() {
        $(".nav").find(".active").removeClass("active");
        $("#createlink").addClass("active");
      });
    });
  </script> 


